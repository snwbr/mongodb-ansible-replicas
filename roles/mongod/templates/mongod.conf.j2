# mongo.conf

systemLog:
  destination: file
  path: "/var/log/mongodb/mongod.log"
  logAppend: true

storage:
  dbPath: {{ mongodb_datadir_prefix }}mongo

processManagement:
  fork: true
  pidFilePath: /var/run/mongodb/mongod.pid

security:
  keyFile: {{ mongodb_datadir_prefix }}secret

net:
  port: {{ mongod_port }}
  bindIpAll: true

replication:
  replSetName: {{ replicaSet }}